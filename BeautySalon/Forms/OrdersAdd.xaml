<Window x:Class="BeautySalon.Forms.OrdersAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:BeautySalon.Forms"
        mc:Ignorable="d"
        Title="Добавление заказа" Height="400" Width="450" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded" >
    <Window.Resources>
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Calendar">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid x:Name="PART_Header" Grid.Row="0" Background="{TemplateBinding Background}"/>
                            <ItemsControl x:Name="PART_CalendarItems" Grid.Row="1">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="6" Columns="7"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}" Value="{x:Static sys:Int32.MaxValue}">
                                                            <Setter Property="Foreground" Value="LightGray"/>
                                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Добавляем системное пространство имен -->
        <sys:Double x:Key="MaxDateValue">31</sys:Double>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 10 0 0" HorizontalAlignment="Center">
            <TextBlock Text="Добавление записи" FontSize="15" Margin="0 10"/>
            <ComboBox Name="Client" Style="{StaticResource ComboBox}" Width="380" Margin="0 0 0 10" Height="50" Tag="Клиент"/>
            <ComboBox Name="Services" Style="{StaticResource ComboBox}" SelectionChanged="Services_SelectionChanged" Width="380" Margin="0 0 0 10" Height="50" Tag="Услуга"/>
            <DatePicker Margin="0 0 0 10" x:Name="datePicker1" SelectedDateChanged="datePicker1_SelectedDateChanged"   
                                DisplayDateStart="{x:Static sys:DateTime.Today}"/>
            <ComboBox Name="Master" SelectionChanged="Master_SelectionChanged" Style="{StaticResource ComboBox}" Width="380" Margin="0 0 0 10" Height="50" Tag="Мастер"/>

       
        
            <ComboBox Name="Time" Style="{StaticResource ComboBox}"  Width="380" Height="50" Tag="Время">
              
            </ComboBox>
               

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Width="150" Margin="0 0 50 0" Height="45" Content="Назад" Style="{StaticResource BtnStyle}" Click="Button_Click_1"/>
            <Button Width="150" Height="45" Content="Добавить" Style="{StaticResource BtnStyle}" Click="Button_Click"/>
        
        </StackPanel>
    </Grid>
</Window>
