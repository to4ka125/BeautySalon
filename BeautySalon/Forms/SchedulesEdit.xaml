<Window x:Name="SchedulesEdit" x:Class="BeautySalon.Forms.SchedulesAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySalon.Forms"
        mc:Ignorable="d"
 xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Изменение расписания" Height="360" Width="450" WindowStartupLocation="CenterScreen" WindowStyle="None" 
        Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 10 0 0" HorizontalAlignment="Center">
            <TextBlock Text="Изменение расписания" FontSize="15" Margin="0 10"/>
            <ComboBox
                SelectionChanged="Employee_SelectionChanged"
                IsReadOnly="True" x:Name="Employee" 
                Style="{StaticResource ComboBox}" Width="380" Margin="0 0 0 10" Height="50" Tag="Сотрудник"/>
            <TextBlock Text="Выберите даты" FontSize="15"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Calendar x:Name="customCalendar" HorizontalAlignment="Left" PreviewMouseUp="customCalendar_PreviewMouseUp" Grid.Column="0"  DisplayDateStart="{x:Static sys:DateTime.Today}"
                      PreviewMouseDoubleClick="customCalendar_PreviewMouseDoubleClick">
                    <Calendar.Resources>
                        <local:BackgroundConverter x:Key="Converter"/>
                    </Calendar.Resources>


                    <Calendar.CalendarDayButtonStyle>
                        <Style TargetType="CalendarDayButton">
                            <Style.Triggers>
                                <DataTrigger Value="True">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource Converter}">
                                            <Binding Path="." />
                                            <Binding Path="Dates" 
                                     RelativeSource="{RelativeSource AncestorType=Window}" />
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter Property="Background" Value="#35C482" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Calendar.CalendarDayButtonStyle>
                </Calendar>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="5" Margin="0 1 0 0" Width="10" Height="10" Background="#35C482" VerticalAlignment="Center"/>
                        <TextBlock Margin="5 0 0 0" Text="Работает" FontSize="10" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border CornerRadius="5" Margin="0 1 0 0" Width="10" Height="10" Background="#FEFCFD" BorderBrush="#ADADAD" BorderThickness="0.5"
                                
                                VerticalAlignment="Center"/>
                        <TextBlock Margin="5 0 0 0" Text="Выходной" FontSize="10" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        




        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Width="150" Margin="0 0 50 0" Height="45" Content="Назад" Style="{StaticResource BtnStyle}" Click="Button_Click"/>
            <Button Width="150" Height="45" Content="Сохранить" Style="{StaticResource BtnStyle}" Click="Button_Click_1"/>

        </StackPanel>
    </Grid>
</Window>
