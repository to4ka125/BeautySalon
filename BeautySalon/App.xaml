             StartupUri="MainWindow.xaml">
    <Application.Resources>

  
        <!-- Стиль для календаря -->
        <Style x:Key="CustomCalendarStyle" TargetType="{x:Type Calendar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Calendar}">
                        <StackPanel Background="White">
                            <CalendarItem x:Name="PART_CalendarItem" 
                                 Background="White"
                                 BorderThickness="0"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--#region Стили для текстовых полей-->
        <Style x:Key="PcaholderTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="20 20 0 0"
                                SnapsToDevicePixels="True"
                                BorderBrush="#506F60"
                                BorderThickness="1">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock x:Name="textBlock" 
                                           Text="{Binding Tag, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                           Padding="{TemplateBinding Padding}"
                                           Foreground="Gray"
                                           FontSize="{TemplateBinding FontSize}"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="textBlock" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PcaholderTextBoxSearch" TargetType="TextBox">
            <Setter Property="Padding" Value="14"/>
            <Setter Property="FontSize" Value="15"/>
