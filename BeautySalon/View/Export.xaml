<UserControl x:Class="BeautySalon.View.Export"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeautySalon.View"
             mc:Ignorable="d" 
                Height="360" d:DesignWidth="500" Background="#fff"
            >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="273*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Экспорт данных" FontSize="20" Margin="10,10,10,0" Grid.ColumnSpan="2"/>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="100">
                <Button x:Name="FileBtn" Style="{StaticResource BtnStruct}" Width="300" Height="80" Content="Экспортировать данные" Click="FileBtn_Click" Margin="0 10" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

            </StackPanel>
        </StackPanel>
       

         
     

    </Grid>
</UserControl>
