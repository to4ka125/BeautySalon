<UserControl x:Class="BeautySalon.Model.productBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeautySalon.Model"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="900">
    <Border Background="#FFf" CornerRadius="10" BorderThickness="0.5" BorderBrush="#ADADAD">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock x:Name="id" Text="{Binding Path=ID, RelativeSource={RelativeSource AncestorType=local:productBlock}}" Visibility="Collapsed"/>
                <TextBlock Text="{Binding Path=Tytle,RelativeSource= {RelativeSource AncestorType=local:productBlock}}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Path=Stock,RelativeSource= {RelativeSource AncestorType=local:productBlock}}" FontSize="15" Margin="0 5"/>
                
                <TextBlock Text="{Binding Path=Price,RelativeSource={RelativeSource AncestorType=local:productBlock}}" FontSize="15"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Image Width="210" Height="100" Source="{Binding Path=Source,RelativeSource={RelativeSource AncestorType=local:productBlock}}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
