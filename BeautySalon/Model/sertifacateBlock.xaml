<UserControl x:Class="BeautySalon.Model.sertifacateBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeautySalon.Model"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="210" Width="210" Height="110">
    <Border CornerRadius="10" Background="#506F60" BorderThickness="0.5" Style="{StaticResource HoverBorder}" BorderBrush="#ADADAD">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Сертификат" FontSize="15" FontWeight="Bold" Foreground="#fff"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Visibility="Collapsed" x:Name="id" Text="{Binding Path=ID,RelativeSource={RelativeSource AncestorType=local:sertifacateBlock}}" Opacity="0.5" Foreground="#fff"/>
                    <TextBlock Text="На сумму: " Opacity="0.5" Foreground="#fff"/>
                    <TextBlock Text="{Binding Path=Price, RelativeSource={RelativeSource AncestorType=local:sertifacateBlock}}"  Foreground="#fff"/>
                    <TextBlock Text=" р"  Foreground="#fff"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
